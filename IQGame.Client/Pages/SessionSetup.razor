        if (categories != null)
        {
        foreach (var category in categories)
        {
            category.IsSelected = false;
        }
        }
        StateHasChanged();
    }

    private void CompleteWithRandom()
    {
        if (categories == null) return;

        var selectedCount = GetSelectedCount();
        var neededCount = 6 - selectedCount;
        var remainingCategories = categories.Where(c => !c.IsSelected).ToList();

        var random = new Random();
        for (int i = 0; i < neededCount && remainingCategories.Any(); i++)
        {
            var index = random.Next(remainingCategories.Count);
            var category = remainingCategories[index];
            category.IsSelected = true;
            remainingCategories.RemoveAt(index);
        }

        StateHasChanged();
    }

    private void SelectRandomCategories()
    {
        if (categories == null) return;

        ClearSelection();
        var random = new Random();
        var shuffledCategories = categories.OrderBy(x => random.Next()).Take(6).ToList();

        foreach (var category in shuffledCategories)
        {
            category.IsSelected = true;
        }

        StateHasChanged();
    }

    private async Task CreateSession()
    {
        Console.WriteLine("🚀 Starting session creation...");
        showValidation = true;
        showSessionNameValidation = true;
        showTeam1Validation = true;
        showTeam2Validation = true;
        
        if (!CanCreateSession())
        {
            Console.WriteLine("❌ CanCreateSession returned false");
            if (GetSelectedCount() != 6)
            {
                await ShowCategoryNotification();
            }
            return;
        }

        Console.WriteLine("✅ Basic validation passed, checking categories...");

        // Validate that selected categories have enough questions
        var selectedCategories = categories.Where(c => c.IsSelected).ToList();
        Console.WriteLine($"📋 Selected {selectedCategories.Count} categories");
        
        var validationResult = await ValidateSelectedCategories(selectedCategories);
        Console.WriteLine($" Validation result: {validationResult.IsValid}, Message: {validationResult.Message}");
        
        if (!validationResult.IsValid)
        {
            Console.WriteLine("❌ Category validation failed");
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                title = "فئات غير صالحة",
                text = validationResult.Message,
                icon = "warning",
                confirmButtonText = "حسناً"
            });
            return;
        }

        Console.WriteLine("✅ Category validation passed, creating session...");

        try
        {
            IsCreating = true;
            var selectedCategoryIds = selectedCategories.Select(c => c.Id).ToList();
            Console.WriteLine($"📝 Category IDs: [{string.Join(", ", selectedCategoryIds)}]");
            
            var request = new CreateSessionRequest
            {
                SessionName = sessionName,
                Team1 = team1,
                Team2 = team2,
                CategoryIds = selectedCategoryIds
            };
            
            Console.WriteLine($"📤 Sending request: SessionName={request.SessionName}, Team1={request.Team1}, Team2={request.Team2}");
            
            var (success, error, sessionId) = await SessionService.CreateSessionAsync(request);
            
            Console.WriteLine($"📥 Response: Success={success}, Error={error}, SessionId={sessionId}");

            if (success && sessionId.HasValue)
            {
                Console.WriteLine($"✅ Session created successfully, redirecting to gameboard/{sessionId.Value}");
                GameState.SessionId = sessionId.Value;
                GameState.SessionName = sessionName;
                GameState.Team1 = team1;
                GameState.Team2 = team2;
                GameState.CurrentTurn = team1; // Set initial turn to team1
                NavManager.NavigateTo($"/gameboard/{sessionId.Value}");
            }
            else
            {
                Console.WriteLine($"❌ Session creation failed: {error}");
                
                // Check if this is a repository validation error (contains "doesn't have enough available questions")
                if (error != null && error.Contains("don't have enough available questions"))
                {
                    // Extract the category names from the error message
                    var startIndex = error.IndexOf("Categories ") + 11; // Length of "Categories "
                    var endIndex = error.IndexOf(" don't have enough available questions");
                    var categoriesText = error.Substring(startIndex, endIndex - startIndex);
                    var categoryNames = categoriesText.Split(", ");
                    
                    await JS.InvokeVoidAsync("Swal.fire", new
                    {
                        title = "فئات غير صالحة",
                        text = $"الفئات التالية لا تحتوي على أسئلة كافية متاحة:\n{string.Join("\n- ", categoryNames)}",
                        icon = "warning",
                        confirmButtonText = "حسناً",
                        timer = 5000, // 5 seconds
                        timerProgressBar = true
                    });
                }
                else
                {
                    errorMessage = error ?? "Failed to create session";
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"💥 Exception during session creation: {ex.Message}");
            errorMessage = $"Error creating session: {ex.Message}";
            Console.Error.WriteLine($"Error creating session: {ex}");
        }
        finally
        {
            IsCreating = false;
        }
    }

    private async Task<CategoryValidationResult> ValidateSelectedCategories(List<SelectableCategory> selectedCategories)
    {
        Console.WriteLine($"🔍 Starting validation for {selectedCategories.Count} categories");
        try
        {
            var invalidCategories = new List<string>();

            foreach (var category in selectedCategories)
            {
                Console.WriteLine($"🔍 Validating category: {category.Name} (ID: {category.Id})");
                Console.WriteLine($"📊 Category {category.Name}: {category.AvailableGames} games available");
                Console.WriteLine($"📊 Category {category.Name}: Easy={category.EasyQuestionsAvailable}, Medium={category.MediumQuestionsAvailable}, Hard={category.HardQuestionsAvailable}");
                
                // Check if category has at least 1 available game
                if (category.AvailableGames < 1)
                {
                    Console.WriteLine($"❌ Category {category.Name} has no available games");
                    invalidCategories.Add($"{category.Name} (لا توجد ألعبة متاحة)");
                }
            }

            Console.WriteLine($"📊 Total available games across all categories: {selectedCategories.Sum(c => c.AvailableGames)}");

            if (invalidCategories.Any())
            {
                Console.WriteLine($"❌ Found {invalidCategories.Count} invalid categories");
                return new CategoryValidationResult
                {
                    IsValid = false,
                    Message = $"الفئات التالية لا تحتوي على ألعبة متاحة:\n{string.Join("\n", invalidCategories)}"
                };
            }

            Console.WriteLine($"✅ All categories are valid");
            return new CategoryValidationResult
            {
                IsValid = true,
                Message = "جميع الفئات صالحة"
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"💥 Exception during validation: {ex.Message}");
            return new CategoryValidationResult
            {
                IsValid = false,
                Message = $"خطأ في التحقق من الفئات: {ex.Message}"
            };
        }
    }

    public class CategoryValidationResult
