    private async Task SwitchLayout(LayoutType layout)
    {
        Console.WriteLine($"🔄 Switching to layout: {layout}");
        Console.WriteLine($"📊 Categories count: {categories?.Count ?? 0}");
        
        currentLayout = layout;
        
        if (layout == LayoutType.Favorites)
        {
            Console.WriteLine("⭐ Loading favorites...");
            favoriteCategories = await FavoritesService.GetFavoritesAsync();
            Console.WriteLine($"⭐ Favorites count: {favoriteCategories?.Count ?? 0}");
            
            // Update IsFavorite property when switching to favorites layout
            if (categories != null && favoriteCategories != null)
            {
                var favoriteIds = favoriteCategories.Select(f => f.Id).ToHashSet();
                foreach (var category in categories)
                {
                    category.IsFavorite = favoriteIds.Contains(category.Id);
                }
                Console.WriteLine($"⭐ Updated IsFavorite for {categories.Count(c => c.IsFavorite)} categories");
            }
        }
        else if (layout == LayoutType.AllTogether)
        {
            Console.WriteLine("📋 All Together layout selected");
            Console.WriteLine($"📋 Categories available: {categories?.Count ?? 0}");
            if (categories != null)
            {
                foreach (var cat in categories.Take(5)) // Show first 5 for debugging
                {
                    Console.WriteLine($"📋 Category: {cat.Name} (ID: {cat.Id})");
                }
            }
        }
        
        StateHasChanged();
    }

    private async Task ToggleFavorite(SelectableCategory category)
    {
        if (category.IsFavorite)
            await RemoveFromFavorites(category.Id);
        else
            await AddToFavorites(category);
