@page "/sessions"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavManager
@inject SessionService SessionService
@inject IJSRuntime JS

<div class="container d-flex flex-column align-items-center">
    <div class="text-center mb-4">
        <h3 class="resume-title">إكمال جلسة</h3>
    </div>

    <div class="session-setup-section w-100" style="margin-top: 2rem;">
        @if (isLoading)
        {
            <div class="loading-overlay">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">جاري التحميل...</span>
                </div>
                <span>جاري التحميل...</span>
            </div>
        }
        else if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger">@error</div>
        }
        else if (sessions.Count == 0)
        {
            <div class="no-sessions-container">
                <div class="no-sessions-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                <div class="no-sessions-title">لا توجد جلسات متاحة</div>
                <div class="no-sessions-subtitle">قم بإنشاء جلسة جديدة للبدء في اللعب</div>
                <button class="create-session-btn" @onclick="NavigateToHome">
                    <i class="fas fa-plus"></i>
                    إنشاء جلسة جديدة
                </button>
            </div>
        }
        else
        {
            <div class="sessions-grid">
                @foreach (var session in sessions)
                {
                    <div class="session-card">
                        <div class="categories-mini-grid" style="flex-direction: column; gap: 0.3rem;">
                            <div class="mini-row" style="display: flex; justify-content: center; gap: 0.3rem;">
                                @for (int i = 0; i < 3; i++)
                                {
                                    var cat = session.Categories.ElementAtOrDefault(i);
                                    if (cat != null)
                                    {
                                        <div class="mini-category-card">
                                            <div class="mini-category-image-wrapper">
                                                <img src="@cat.CategoryImageUrl" alt="@cat.CategoryName" class="mini-category-image" @onerror="(e) => HandleImageError(e, cat)" />
                                            </div>
                                            <div class="mini-category-name">@cat.CategoryName</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mini-category-card" style="opacity:0.3;"></div>
                                    }
                                }
                            </div>
                            <div class="mini-row" style="display: flex; justify-content: center; gap: 0.3rem;">
                                @for (int i = 3; i < 6; i++)
                                {
                                    var cat = session.Categories.ElementAtOrDefault(i);
                                    if (cat != null)
                                    {
                                        <div class="mini-category-card">
                                            <div class="mini-category-image-wrapper">
                                                <img src="@cat.CategoryImageUrl" alt="@cat.CategoryName" class="mini-category-image" @onerror="(e) => HandleImageError(e, cat)" />
                                            </div>
                                            <div class="mini-category-name">@cat.CategoryName</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mini-category-card" style="opacity:0.3;"></div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="session-name-row">
                            <span>@session.SessionName</span>
                        </div>
                        <div class="session-buttons-row">
                            <button class="random-btn clear-btn" @onclick="() => ShowResetModal(session)">
                                <i class="fas fa-redo"></i> إعادة تعيين
                            </button>
                            <button class="random-btn resume-btn" @onclick="() => ResumeSession(session.SessionId)">
                                <i class="fas fa-play"></i> إكمال
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Reset Modal -->
    @if (showResetModal)
    {
        <div class="modal-overlay" @onclick="CloseResetModal">
            <div class="modal-content" @onclick:stopPropagation="true" style="background: var(--gradient-primary); border-radius: 2rem; max-width: 430px; width: 98%; padding: 2.5rem 2rem 2rem 2rem; box-shadow: 0 10px 30px rgba(0,0,0,0.13);">
                <div class="modal-header" style="border-bottom: none; padding-bottom: 0; justify-content: center;">
                    <h4 style="font-weight: bold; color: #fff; text-align: center; width: 100%;">اسم الجلسة</h4>
                    <button class="modal-close" @onclick="CloseResetModal" style="position: absolute; left: 1.5rem; top: 1.5rem; color: #fff;">×</button>
                </div>
                <div class="modal-body" style="padding: 0; margin-top: 1.2rem;">
                    <div class="form-group text-center" style="margin-bottom: 2.2rem;">
                        <input class="form-control session-input" style="font-size: 1.25rem; border-radius: 1.2rem; padding: 1.1rem; text-align: center;" @bind="resetSessionName" placeholder="اسم اللعبة" />
                    </div>
                    <div class="team-inputs-row mb-4 w-100" style="display: flex; gap: 1.5rem; justify-content: center;">
                        <div class="team-input-col" style="flex: 1;">
                            <div class="form-group text-center">
                                <label style="font-weight: bold; color: #fff; margin-bottom: 0.5rem;">الفريق الثاني</label>
                                <input class="form-control session-input" style="border-radius: 1.2rem; padding: 1.1rem; text-align: center; font-size: 1.1rem;" @bind="resetTeam2Name" placeholder="اسم الفريق" />
                            </div>
                        </div>
                        <div class="team-input-col" style="flex: 1;">
                            <div class="form-group text-center">
                                <label style="font-weight: bold; color: #fff; margin-bottom: 0.5rem;">الفريق الأول</label>
                                <input class="form-control session-input" style="border-radius: 1.2rem; padding: 1.1rem; text-align: center; font-size: 1.1rem;" @bind="resetTeam1Name" placeholder="اسم الفريق" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="justify-content: center; border: none; padding: 0; margin-top: 1.5rem;">
                    <button class="start-game-btn reset-modal-btn" style="width: 100%; font-size: 2rem; border-radius: 2.5rem; padding: 1.1rem 0; background: #0A6A4E; color: #fff; transition: background 0.2s, transform 0.2s; font-weight: bold;" @onclick="ResetSession" disabled="@isResetting">
                        @if (isResetting)
                        {
                            <span>جاري الإعادة تعيين...</span>
                        }
                        else
                        {
                            <span>ابدأ اللعب</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    }

</div>
<div style="padding-top: 2rem;"></div>
<Footer />

