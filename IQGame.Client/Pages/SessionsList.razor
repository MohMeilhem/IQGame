@code {
    private List<SessionSummaryDto> sessions = new();
    private bool isLoading = true;
    private string error;
    
    // Reset modal state
    private bool showResetModal = false;
    private SessionSummaryDto selectedSession;
    private string resetSessionName = "";
    private string resetTeam1Name = "";
    private string resetTeam2Name = "";
    private bool isResetting = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            var rawSessions = await Http.GetFromJsonAsync<List<SessionSummaryDto>>("api/sessions/all") ?? new();
            
            // Process image URLs like SessionService does
            foreach (var session in rawSessions)
            {
                if (session.Categories != null)
                {
                    foreach (var category in session.Categories)
                    {
                        if (!string.IsNullOrEmpty(category.CategoryImageUrl) && !category.CategoryImageUrl.StartsWith("http"))
                        {
                            category.CategoryImageUrl = $"{Http.BaseAddress}{category.CategoryImageUrl.TrimStart('/')}";
                        }
                    }
                }
            }
            
            sessions = rawSessions;
        }
        catch (Exception ex)
        {
            error = $"خطأ في تحميل الجلسات: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ResumeSession(int sessionId)
    {
        NavManager.NavigateTo($"/gameboard/{sessionId}");
    }

    private void NavigateToHome()
    {
        NavManager.NavigateTo("/");
    }

    private void ShowResetModal(SessionSummaryDto session)
    {
        selectedSession = session;
        resetSessionName = session.SessionName;
        resetTeam1Name = session.Team1Name;
        resetTeam2Name = session.Team2Name;
        showResetModal = true;
    }

    private void CloseResetModal()
    {
        showResetModal = false;
        selectedSession = null;
        resetSessionName = "";
        resetTeam1Name = "";
        resetTeam2Name = "";
    }

    private async Task ResetSession()
    {
        if (string.IsNullOrWhiteSpace(resetSessionName) || 
            string.IsNullOrWhiteSpace(resetTeam1Name) || 
            string.IsNullOrWhiteSpace(resetTeam2Name))
        {
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                title = "خطأ",
                text = "يرجى ملء جميع الحقول المطلوبة",
                icon = "error",
                confirmButtonText = "حسناً"
            });
            return;
        }

        try
        {
            isResetting = true;
            var success = await SessionService.ResetSessionAsync(
                selectedSession?.SessionId ?? 0, 
                resetSessionName, 
                resetTeam1Name, 
                resetTeam2Name
            );

            if (success)
            {
                var sessionId = selectedSession?.SessionId ?? 0;
                CloseResetModal();
                if (sessionId != 0)
                    NavManager.NavigateTo($"/gameboard/{sessionId}");
                else
                    await JS.InvokeVoidAsync("Swal.fire", new
                    {
                        title = "Error",
                        text = "Could not determine the selected session.",
                        icon = "error",
                        confirmButtonText = "OK"
                    });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    title = "خطأ",
                    text = "فشل في إعادة تعيين الجلسة",
                    icon = "error",
                    confirmButtonText = "حسناً"
                });
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                title = "خطأ",
                text = $"حدث خطأ: {ex.Message}",
                icon = "error",
                confirmButtonText = "حسناً"
            });
        }
        finally
        {
            isResetting = false;
        }
    }

    private void HandleImageError(ErrorEventArgs e, CategorySummaryDto category)
    {
        // Use a simple fallback - could be a data URL or just hide the image
        category.CategoryImageUrl = "data:image/svg+xml;base64,";
        StateHasChanged();
    }

    public class SessionSummaryDto
    {
        public int SessionId { get; set; }
        public string SessionName { get; set; }
        public List<CategorySummaryDto> Categories { get; set; }
        public int TotalQuestions { get; set; }
        public bool IsValid { get; set; }
        public string Team1Name { get; set; }
        public string Team2Name { get; set; }
    }
    
    public class CategorySummaryDto
    {
        public int CategoryId { get; set; }
        public string CategoryName { get; set; }
        public string CategoryImageUrl { get; set; }
    }
} 