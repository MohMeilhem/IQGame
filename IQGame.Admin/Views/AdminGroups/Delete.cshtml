@model IQGame.Shared.Models.Group

@{
    ViewData["Title"] = "Delete Group";
}

<h1>Delete Group</h1>

<h3>Are you sure you want to delete this group?</h3>
<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <strong>@Html.DisplayFor(model => model.Name)</strong>
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Color))
            {
                <span class="badge" style="background-color: @Model.Color; color: white;">@Model.Color</span>
            }
            else
            {
                <span class="text-muted">No color set</span>
            }
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
        
        <dt class="col-sm-2">
            Categories
        </dt>
        <dd class="col-sm-10">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                <div class="alert alert-warning">
                    <strong>Warning:</strong> This group has @Model.Categories.Count category(ies) assigned to it. 
                    You cannot delete a group that has categories.
                </div>
                <div class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <div class="list-group-item">
                            <strong>@category.Name</strong>
                        </div>
                    }
                </div>
            }
            else
            {
                <span class="text-muted">No categories assigned to this group</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (Model.Categories == null || !Model.Categories.Any())
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        else
        {
            <button type="button" class="btn btn-danger" disabled>Cannot Delete (Has Categories)</button>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 