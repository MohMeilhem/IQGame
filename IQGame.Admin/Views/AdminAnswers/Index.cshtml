@model IEnumerable<IQGame.Shared.Models.Answer>

@{
    ViewData["Title"] = "Answers";
    var selectedQuestion = ViewData["SelectedQuestionId"]?.ToString();
    var selectedCorrectness = ViewData["SelectedCorrectness"]?.ToString();
    var selectedCategory = ViewData["SelectedCategoryId"]?.ToString();
    var questions = ViewData["Questions"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var categories = ViewData["Categories"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var apiBaseUrl = "https://localhost:7187"; // Add API base URL
}

<h1>Answers</h1>

<p>
    <a asp-action="Create" asp-route-questionId="@selectedQuestion" asp-route-isCorrect="@(selectedCorrectness ?? "true")" asp-route-categoryId="@selectedCategory" class="btn btn-success">+ Create New Answer</a>
</p>

<!-- Filter Form -->
<form method="get" class="mb-4 row">
    <div class="col-md-4">
        <label>Category</label>
        <select name="categoryId" class="form-select">
            <option value="">-- All Categories --</option>
            @foreach (var c in categories)
            {
                var selected = c.Value == selectedCategory ? "selected" : null;
                <option value="@c.Value" selected="@selected">@c.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label>Question</label>
        <select name="questionId" class="form-select">
            <option value="">-- All Questions --</option>
            @foreach (var q in questions)
            {
                var selected = q.Value == selectedQuestion ? "selected" : null;
                <option value="@q.Value" selected="@selected">@q.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label>Correctness</label>
        <select name="isCorrect" class="form-select">
            <option value="">-- All --</option>
            <option value="true" selected="@(selectedCorrectness == "true" ? "selected" : null)">Correct</option>
            <option value="false" selected="@(selectedCorrectness == "false" ? "selected" : null)">Wrong</option>
        </select>
    </div>
    <div class="col-md-2">
        <label>Difficulty</label>
        <select name="difficulty" class="form-select">
            <option value="">-- All --</option>
            @{
                var selectedDifficulty = ViewData["SelectedDifficulty"]?.ToString();
            }
            @if (selectedDifficulty == "1") {
                <option value="1" selected>Easy</option>
            } else {
                <option value="1">Easy</option>
            }
            @if (selectedDifficulty == "2") {
                <option value="2" selected>Medium</option>
            } else {
                <option value="2">Medium</option>
            }
            @if (selectedDifficulty == "3") {
                <option value="3" selected>Hard</option>
            } else {
                <option value="3">Hard</option>
            }
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Reset</a>
    </div>
</form>

<!-- Search + Bulk Delete -->
<div class="row mb-3">
    <div class="col-md-6">
        <input type="text" id="searchBox" class="form-control" placeholder="🔍 Search answers..." />
    </div>
    <div class="col-md-6 text-end">
        <form id="bulkDeleteForm" asp-action="BulkDelete" method="post">
            <input type="hidden" name="returnQuestionId" value="@selectedQuestion" />
            <input type="hidden" name="returnCorrectness" value="@selectedCorrectness" />
            <input type="hidden" name="returnCategoryId" value="@selectedCategory" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete selected answers?');">
                🗑 Delete Selected
            </button>
        </form>
    </div>
</div>

<table class="table table-striped" id="answersTable">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll" /></th>
            <th>Image</th>
            <th>Text</th>
            <th>Is Correct</th>
            <th>Question</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" name="selectedIds" form="bulkDeleteForm" value="@item.Id" class="rowCheckbox" /></td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        var imageUrl = item.ImageUrl.StartsWith("http") ? item.ImageUrl : $"{apiBaseUrl}{item.ImageUrl}";
                        <img src="@imageUrl" width="80" height="80" style="object-fit:cover;" alt="Answer Image" />
                    }
                </td>
                <td class="searchable">@item.Text</td>
                <td>
                    @if (item.IsCorrect)
                    {
                        <span class="badge bg-success">Correct</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Wrong</span>
                    }
                </td>
                <td class="searchable">@item.Question?.Text</td>
                <td class="searchable">
                    @if (item.Question?.Category != null)
                    {
                        <span class="badge bg-info">@item.Question.Category.Name</span>
                        @if (item.Question.Category.Group != null)
                        {
                            <br />
                            <small class="text-muted">@item.Question.Category.Group.Name</small>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-questionId="@selectedQuestion" asp-route-isCorrect="@selectedCorrectness" asp-route-categoryId="@selectedCategory" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-returnQuestionId="@selectedQuestion" asp-route-returnCorrectness="@selectedCorrectness" asp-route-returnCategoryId="@selectedCategory" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Live search
        document.getElementById("searchBox").addEventListener("input", function () {
            var filter = this.value.toLowerCase();
            var rows = document.querySelectorAll("#answersTable tbody tr");

            rows.forEach(function (row) {
                var text = row.querySelectorAll(".searchable");
                var match = Array.from(text).some(td => td.textContent.toLowerCase().includes(filter));
                row.style.display = match ? "" : "none";
            });
        });

        // Select all
        document.getElementById("selectAll").addEventListener("change", function () {
            var checkboxes = document.querySelectorAll(".rowCheckbox");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}
